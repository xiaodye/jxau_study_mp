{
  "easycom": {
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "login"
      }
    },
    {
      "path": "pages/rigister/rigister",
      "style": {
        "navigationBarTitleText": "rigister"
      }
    },
    {
      "path": "pages/exercise/exercise",
      "style": {
        "navigationBarTitleText": "题库"
      }
    },
    {
      "path": "pages/community/community",
      "style": {
        "navigationBarTitleText": "社区"
      }
    },
    {
      "path": "pages/person/person",
      "style": {
        "navigationBarTitleText": "个人"
      }
    }
  ],

  "subPackages": [
    {
      "root": "subPackages/index",
      "pages": [
        {
          "path": "write/write",
          "style": {
            "navigationBarTitleText": "写文章"
          }
        }
      ]
    }
  ],

  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "color": "#000000",
    "selectedColor": "#17ead9",
    "backgroundColor": "#fff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "static/tabbar/index_.png",
        "selectedIconPath": "static/tabbar/indexSelected.png"
      },
      {
        "pagePath": "pages/exercise/exercise",
        "text": "题库",
        "iconPath": "static/tabbar/exercise.png",
        "selectedIconPath": "static/tabbar/exerciseSelected.png"
      },
      {
        "pagePath": "pages/community/community",
        "text": "社区",
        "iconPath": "static/tabbar/community.png",
        "selectedIconPath": "static/tabbar/communitySelected.png"
      },
      {
        "pagePath": "pages/person/person",
        "text": "个人中心",
        "iconPath": "static/tabbar/person.png",
        "selectedIconPath": "static/tabbar/personCenterSelected.png"
      }
    ]
  }
}
